@model SFT.Web.UI.Models.LoginModel
@{
  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>NAHP :: Login</title>
    <link href="@Url.Content("~/Content/themes/base/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/nivo-slider.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.nivo.slider.js")" type="text/javascript"></script>
</head>
<body class="admin">

  <div id="error" class="login" style="display:none">The username or password appears to be invalid.</div>
  
  <div id="login-top"></div>
  <div id="login">
    <div id="login-head">Control Panel Login</div>
    @using (Html.BeginForm())
    {
      @Html.ValidationSummary()
      <label for="Username">Username:</label>
      @Html.TextBoxFor(model=>model.Username)
      <label for="Password">Password:</label>
      @Html.PasswordFor(model=>model.Password)
      @Html.CheckBoxFor(model=>model.RememberMe)
      <label for="RememberMe">remember me</label>
      <input type="submit" value="LOG IN" />
    }
    <div id="login-foot"><a href="#">I forgot my password</a></div>
  </div>
  <div id="login-bottom"></div>

</body>
</html>
